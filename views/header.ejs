<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title><%-title %></title>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-40793217-4', 'auto');
    ga('send', 'pageview');
  </script>
</head>
<body>
<div class="container">
  <% if (locals.success) { %>
    <div class="alert alert-success alert-dismissible" roler="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>Well done!</strong> <%-success %>
    </div>
  <% } %>
  <% if (locals.info) { %>
    <div class="alert alert-info alert-dismissible" roler="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>Heads up!</strong> <%-info %>
    </div>
  <% } %>
  <% if (locals.warning) { %>
    <div class="alert alert-warning alert-dismissible" roler="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>Warning!</strong> <%-warning %>
    </div>
  <% } %>
  <% if (locals.error) { %>
    <div class="alert alert-danger alert-dismissible" roler="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%-locals.errorTitle %></strong> <%-error %>
    </div>
  <% } %>
  <% if (locals.danger) { %>
    <div class="alert alert-danger alert-dismissible" roler="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>Something went wrong!</strong> <%-danger %>
    </div>
  <% } %>