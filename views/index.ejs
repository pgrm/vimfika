<% include header %>
<div class="container">
  <% if (locals.error) { %>
    <div class="alert alert-danger alert-dismissible" roler="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong>Error subscribing!</strong> <%-error %>
    </div>
  <% } %>
  <div class="row">
    <div class="col-xs-12" style="text-align:center">
      <h1>Welcome to <%-title %></h1>
      <h3>Master <a href="http://en.wikipedia.org/wiki/Vim_%28text_editor%29">Vim</a> in little pieaces day by day.</h3>
      <h3>Sign up for a daily tip about Vim and it's countless features.</h3>
      <br />
      <form class="form-inline" action="/signup" method="POST">
        <div class="form-group">
          <label for="email" class="sr-only">Email address</label>
          <div class="input-group">
            <div class="input-group-addon">Email: </div>
            <input type="email" class="form-control" id="email" name="email" style="width:256px" required="required" placeholder="Enter your email address" />
          </div>
        </div>
        <button class="btn btn-primary" type="submit">I want to learn Vim</button>
      </form>
    </div>
  </div>
</div>
<% include footer %>